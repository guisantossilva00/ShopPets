    public static void formatNameDescription(){
        for(Product2 prd: (List<Product2>)Trigger.New){
            prd.Name = StringHelper.fixSapText(prd.Name);
            if(trigger.isInsert){
                prd.Description = prd.Name;
            } 
        }  
    }
    
    public static void fixedManualDescription(){
        for(Product2 prd: (List<Product2>)Trigger.New){
            Product2 old = (Product2) Trigger.OldMap.get(prd.Id);
            if(prd.Description != null && prd.Name == StringHelper.fixSapText(prd.Description)){
                prd.Description = old.Description;
            } 
        } 
    }
    
    public static void productOrder(){
        Id priceBooks = [SELECT id FROM PRICEBOOK2 WHERE IsStandard = true].Id;
        List<PricebookEntry> productListToInsert = new List<PricebookEntry>();
        
        // Lista de registros novos -> Trigger.new
        for(Product2 prd: (List<Product2>)Trigger.New){
            PricebookEntry price = new PricebookEntry();
            price.Product2Id = prd.Id;
            price.UnitPrice = 1;
            price.Pricebook2Id = priceBooks;
            price.IsActive = true;
            productListToInsert.add(price);
        }
        
        if(!Test.isRunningTest()) insert productListToInsert;
    }
    
