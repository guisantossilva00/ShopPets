<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="xmlns=http://soap.sforce.com/2006/04/metadata">
    <isExposed>true</isExposed>
    <masterLabel>PagBrasil Payment Methods</masterLabel>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property
        name="cartId"
        label="Cart ID"
        type="String"
        description="The current record id"
        default=""
        role="inputOnly"
      />
            <property
        name="selectedPaymentType"
        label="Selected Payment Type"
        type="String"
        description="The selected payment type"
        role="inputOnly"
      />
            <property
        name="nextButtonLabel"
        label="Next Button Label"
        type="String"
        description="The text string to place on the Next button"
        default="Próximo"
        role="inputOnly"
      />
	  		<property
        name="paymentHeaderLabel"
        label="Payment Header Label"
        type="String"
        description="The text string to place on Payment component header"
        default="Pagamento"
        role="inputOnly"
      />
	  		<property
        name="billingHeaderLabel"
        label="Billing Header Label"
        type="String"
        description="The text string to place on Billing Address component header"
        default="Endereço de faturamento"
        role="inputOnly"
      />
	    	<property
        name="contactPointAddressId"
        label="Selected Billing Address ID"
        type="String"
        description="The address ID"
        role="outputOnly"
      />
	  		<property
        name="contactPointAddressRecord"
        label="Contact Point Address Record"
        type="@salesforce/schema/ContactPointAddress"
        description="The Contact Point Address"
        role="outputOnly"
      />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>